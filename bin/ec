# #         /usr/bin/emacsclient    -n  "$@"
# #         /usr/bin/emacsclient   --eval   "(find-file (expand-file-name \"$1\"  \"$PWD\")  )"
#     /usr/bin/emacsclient  "$@"
#     fi


