#     then   #如果没有文件名
#     echo ' show_matched_client({class="Emacs" ,instance="emacs"},"emacs","/usr/bin/emacsclient -c " ,nil)' |awesome-client
# #        emacsclient -c  >/dev/null &
#     else  #有文件名时 #先尝试显示已经存在的emacsclient(可能处于隐藏态)
#     echo ' show_matched_client({class="Emacs" ,instance="emacs"},"emacs","/usr/bin/emacsclient -c " ,nil)' |awesome-client
