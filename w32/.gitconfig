# -*- coding:utf-8 -*-
[user]
	name = jixiuf
	email = jixiuf@qq.com
[branch "master"]
	remote = origin
	merge = master
[push]
	default = current

[mergetool "ediff"]
	cmd = emacsclient --eval \"(git-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
	trustExitCode = false
[mergetool]
	prompt = false
[merge]
	tool = ediff

	# run : git difftool
[diff]
	tool = ediff
[diff "lisp"]
	# http://wandrian.net/2012-03-11-1727-custom-git-hunk-headers-for-lisp.html
	xfuncname="^(\\((def|test).*)$"
	# xfuncname = "^\\(.*$"
[difftool]
	prompt = false
[difftool "ediff"]
	cmd = emacsclient --eval \"(ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" )\"

[alias]
	sub=submodule
	subp=submodule foreach git pull
	subc=submodule foreach git co master
	a=add
	undo = reset --soft HEAD^
    r-- =  reset --hard HEAD~1
    r--- =  reset --hard HEAD~2
    r---- =  reset --hard HEAD~3
    r----- =  reset --hard HEAD~4
    r------ =  reset --hard HEAD~5
    r------- =  reset --hard HEAD~6
    r-------- =  reset --hard HEAD~7
    r1 =  reset --hard HEAD~1
    r2 =  reset --hard HEAD~2
    r3 =  reset --hard HEAD~3
    r4 =  reset --hard HEAD~4
    r5 =  reset --hard HEAD~5
    r6 =  reset --hard HEAD~6
    r7 =  reset --hard HEAD~7
	st = status
	br = branch
	b = branch -a -v
	ci = commit
	co = checkout
	df = diff
	re = remote -v
	l =log --graph --decorate --pretty=oneline --abbrev-commit --all
	ll = log --date iso --stat
	pd = pull --dry-run
	s = status
	up = pull --rebase
	put = push origin HEAD
	pom = push origin master
	f = pull
    p =push

	dd = difftool
	d = diff -C
	dw = diff -C --color-words

	ru = remote update
	sb = show-branch --sha1-name
	ls-del = ls-files -d
	ls-mod = ls-files -m
	ls-new = ls-files --exclude-standard -o
	ls-ign = ls-files --exclude-standard -o -i

	# ignore some changes temp
	# git ignore <filenames>
	# git unignore <filenames>
	# git ignored
	ignore = !git update-index --assume-unchanged
	unignore = !git update-index --no-assume-unchanged
	# ignored = !git ls-files -v | grep ^[a-z]
    # ignored = !git ls-files -v | grep "^[[:lower:]]" | awk '{print $2}'
	ignored = !git ls-files -v | grep "^[[:lower:]]"

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
	attributesfile = ~/.gitattributes

[core]
	editor =emacsclient
	pager = less -r
	#his basically tells Git that an end-of-line CR is not an error. As a result,
	#those annoying ^M characters no longer appear at the end of lines in git diff, git show, etc.
	whitespace = cr-at-eol
	excludesfile = ~/.gitignore
	# 644 or 755
	filemode = false
	attributesfile = ~/.gitattributes
	ignorecase = true           #用于解决 git svn rebase 时的错The following untracked working tree files would be overwritten by checkout:
[log]
	date=iso
[i18n]
	commitencoding = utf-8
	logoutputencoding =gbk
# [branch]
	# autosetuprebase = always
# [pull]
	# rebase = true
[http]
	postBuffer = 524288000
    #这里是因为 Git 使用 libcurl 提供 http 支持
    #proxy = socks5://127.0.0.1:7070
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[status]
	showUntrackedFiles=all
