#!/usr/bin/env bash

toggle_fullscreen(){
    if [ "$XDG_SESSION_DESKTOP"  = "Hyprland" ]; then
        if [ $appcnt = 1 ]; then
            hyprctl dispatch fullscreen 0
        else
            hyprctl dispatch fullscreen 1
        fi
    elif [ "$XDG_SESSION_DESKTOP"  = "niri" ]; then
        niri msg action maximize-column
        # niri msg action fullscreen-window
    else
        swaymsg "fullscreen"
    fi
}
# ws=$(hyprctl activeworkspace -j)
# ws_id=`echo $ws|jq -r '.id'`
# app count in current workspace
# app_cnt=$(hyprctl clients -j | jq -cr '.[] | select(.workspace.id == '$ws_id')'|wc -l)
if [ "$XDG_SESSION_DESKTOP"  = "Hyprland" ]; then
    appinfo=`hyprctl activewindow -j`
    class=`echo $appinfo|jq -r '.class'`
    title=`echo $appinfo|jq -r '.title'`
    fullscreen=`echo $appinfo|jq -r '.fullscreen'|head -n 1`
    appcnt=`hyprctl clients -j | jq -cr '.[] | select(.workspace.id == '$(hyprctl activeworkspace -j|jq -rc ".id")')|.address'|wc -l`
elif [ "$XDG_SESSION_DESKTOP"  = "niri" ]; then
    appinfo=`niri msg -j focused-window`
    class=`echo $appinfo|jq -r '.app_id'`
    title=`echo $appinfo|jq -r '.title'`
    # true or false
    fullscreen=$(niri msg -j focused-window | jq -r '(.layout.window_offset_in_tile | all(. == 0.0))')

    appcnt=`niri msg -j windows|jq -rc '.[]|select(.workspace_id =='$(niri msg -j  workspaces |jq  -cr ".[]|select(.is_focused ==true)|.id")')|.app_id'|wc -l  `

else
    appinfo=`swaymsg -t get_tree | jq -r 'recurse(.nodes[], .floating_nodes[]) |select(.focused)'`
    class=`echo $appinfo|jq -r '(.app_id // .window_properties.class // "")'|head -n 1`
    title=$(echo $appinfo|jq -r '.name')
    appcnt=0                    # todo
fi

if [ -n "$class" ]; then
    # fullscreen=`echo $appinfo|jq -r '.fullscreen'|head -n 1`
    if [[ "$class" = "emacs"  ]]; then
        sleep 0.1
        echo key ctrl+super+m|dotoolc
    elif [[ "$class" = "foot"* ||"$class" = *"Alacritty"* || "$class" = *"term"* ]]; then
        #tmux: set -g set-titles-string 'TMUX:#{session_name}:#{pane_title}'
        if [[ "$title" == "TMUX:"* ]]; then
            title=${title#TMUX:}
            tmux_session=${title%%:*}
            # tmux display -p '#{window_zoomed_flag}'
            if [ "$(tmux display -p '#{window_panes}')" == "1" ]; then
                toggle_fullscreen
            else
                zoomed=$(tmux display -p '#{window_zoomed_flag}')
                if [ "$zoomed" == "0"   ]; then
                    if [[ "$fullscreen" == "0" || "$fullscreen" == "false" ]]; then
                        toggle_fullscreen
                    fi
                else
                    if [[ "$fullscreen" == "1" || "$fullscreen" == "true" ]]; then
                        toggle_fullscreen
                    fi
                fi
                tmux resize-pane -t $tmux_session -Z
            fi
        else
            toggle_fullscreen
        fi
    else
        toggle_fullscreen
    fi
else
    toggle_fullscreen
fi
